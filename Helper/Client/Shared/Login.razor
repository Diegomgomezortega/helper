<EditForm Model="usuario">
    <DataAnnotationsValidator />
    <center>
        <div class="col-sm-4">
            <div class="card" style="width: 28rem; background-color: #FFEC84">
                @* Header *@
                <div class="card-header">
                    <h2 class="text-center">@titulo</h2>
                </div>
                @if (registrar)
                {
                    <div class="form-floating">
                        <InputText class="form-control" id="nombre" placeholder="Nombre" @bind-Value="@usuario.Nombre" />
                        <label for="nombre">Nombre</label>
                        <ValidationMessage For="@(() => usuario.Nombre)" />
                        <br />
                        <br />
                    </div>
                    <div class="form-floating">
                        <InputText class="form-control" id="apellido" placeholder="Apellido" @bind-Value="@usuario.Apellido" />
                        <label for="apellido">Apellido</label>
                        <ValidationMessage For="@(() => usuario.Apellido)" />
                        <br />
                        <br />
                    </div>
                    <div class="form-floating">
                        <InputText class="form-control" id="localidad" placeholder="Localidad" @bind-Value="@usuario.Localidad" />
                        <label for="localidad">Localidad</label>
                        <ValidationMessage For="@(() => usuario.Localidad)" />
                        <br />
                        <br />
                    </div>
                }
                <div class="form-floating">
                    <input type="email" id="email" class="form-control" placeholder="E-mail" />
                    <ValidationMessage For="@(() => usuario.Email)" />
                    <label for="email">E-mail</label>
                    <br />
                </div>
                <div class="form-floating">
                    <input type="password" id="pwd" class="form-control" placeholder="Contraseña" />
                    <ValidationMessage For="@(() => usuario.Contrasena)" />
                    <label for="pwd">Contraseña</label>
                    <br />
                </div>
                @if (registrar)
                {
                    <div class="form-floating">
                        <input type="password" id="pswd" class="form-control" placeholder="Repetir Contraseña" />
                        <ValidationMessage For="@(() => usuario.Contrasena)" />
                        <label for="pswd">Repetir Contraseña</label>
                        <br />
                    </div>
                }

            <div class="card-body">
                @if (registrar)
                {
                    <div class="form-check mb-3">
                        <label class="form-check-label">
                            <input class="form-check-input" type="checkbox" name="remember"> Acepto los términos y condiciones
                        </label>
                    </div>

                }
                <button class="btn btn-primary btn-sm btn-block" type="submit">@textOnvalid</button>
                <button class="btn btn-outline-success btn-sm btn-block" @onclick=@registrarse >@textbtnRegistrar</button>
                @ChildContent

                @*<button class="btn btn-success btn-sm btn-block" >@textobtn2</button>*@
            </div>
            </div>
        </div>
    </center>
</EditForm>

@code {
    private Usuario usuario = new Usuario();
    [Parameter] public string titulo { get; set; }
    [Parameter] public string textOnvalid { get; set; }
    [Parameter] public string textbtnRegistrar { get; set; }
    [Parameter] public bool registrar { get; set; }
    [Parameter] public RenderFragment ChildContent { get; set; }
    [Parameter] public EventCallback registrarse { get; set; }

}