             textobtn2="Cancelar" onChange="SelectTamano"
             fecha="hoy">

</FormAnuncio>

@code {

    public string Tamano;
    bool mostrarNombre;
    DateTime hoy = DateTime.Today;
    private Anuncio anuncio = new Anuncio();


